{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "settings": {
    "appearanceTools": true,
    "useRootPaddingAwareAlignments": true,
    "layout": {
      "contentSize": "740px",
      "wideSize": "1280px",
      "allowEditing": false,
      "allowCustomContentAndWideSize": false
    },
    "color": {
      "background": true,
      "text": true,
      "heading": true,
      "button": true,
      "caption": true,
      "link": false,
      "custom": false,
      "customDuotone": false,
      "customGradient": false,
      "defaultPalette": false,
      "defaultGradients": false,
      "defaultDuotone": false,
      "palette": [
        { "name": "Background", "slug": "emindy-bg", "color": "#FFFFFF" },
        { "name": "Surface", "slug": "emindy-surface", "color": "#F7FAFC" },
        { "name": "Text", "slug": "emindy-text", "color": "#0A2A43" },
        { "name": "Muted", "slug": "emindy-muted", "color": "#425466" },
        { "name": "Border", "slug": "emindy-border", "color": "#D6DEE6" },
        { "name": "Teal", "slug": "emindy-teal", "color": "#00A3A3" },
        { "name": "Teal Dark", "slug": "emindy-teal-700", "color": "#006F6F" },
        { "name": "Gold", "slug": "emindy-gold", "color": "#F4D483" },
        { "name": "Navy", "slug": "emindy-navy", "color": "#0A2A43" },
        { "name": "Ink", "slug": "emindy-ink", "color": "#081B2C" },
        { "name": "Success", "slug": "emindy-success", "color": "#15803D" },
        { "name": "Warning", "slug": "emindy-warning", "color": "#B45309" },
        { "name": "Danger", "slug": "emindy-danger", "color": "#B91C1C" }
      ],
      "gradients": [
        {
          "name": "Calm Dawn",
          "slug": "calm-dawn",
          "gradient": "linear-gradient(135deg, #00A3A340 0%, #F4D48355 55%, #FFFFFF 100%)"
        },
        {
          "name": "Teal Mist",
          "slug": "teal-mist",
          "gradient": "linear-gradient(135deg, #00A3A330 0%, #00A3A300 70%)"
        },
        {
          "name": "Gold Glow",
          "slug": "gold-glow",
          "gradient": "radial-gradient(circle at 30% 20%, #F4D48366 0%, #F4D48300 60%)"
        }
      ]
    },
    "spacing": {
      "blockGap": true,
      "margin": false,
      "padding": false,
      "customSpacingSize": false,
      "defaultSpacingSizes": false,
      "units": ["px", "rem", "em", "%", "vw", "vh"],
      "spacingSizes": [
        { "name": "2XS", "slug": "2xs", "size": "0.25rem" },
        { "name": "XS", "slug": "xs", "size": "0.5rem" },
        { "name": "S", "slug": "s", "size": "0.75rem" },
        { "name": "M", "slug": "m", "size": "1rem" },
        { "name": "L", "slug": "l", "size": "1.5rem" },
        { "name": "XL", "slug": "xl", "size": "2rem" },
        { "name": "2XL", "slug": "2xl", "size": "3rem" },
        { "name": "3XL", "slug": "3xl", "size": "4rem" },
        { "name": "4XL", "slug": "4xl", "size": "6rem" },
        { "name": "5XL", "slug": "5xl", "size": "8rem" }
      ]
    },
    "typography": {
      "defaultFontSizes": false,
      "customFontSize": false,
      "fontStyle": false,
      "fontWeight": false,
      "letterSpacing": false,
      "lineHeight": false,
      "textDecoration": false,
      "textTransform": false,
      "textColumns": false,
      "dropCap": false,
      "fluid": false,
      "textAlign": true,
      "fontFamilies": [
        {
          "name": "eMINDy Sans",
          "slug": "emindy-sans",
          "fontFamily": "\"eMINDy Sans\", system-ui, -apple-system, \"Segoe UI\", Roboto, \"Helvetica Neue\", Arial, \"Noto Sans\", \"Liberation Sans\", sans-serif",
          "fontFace": [
            {
              "fontFamily": "eMINDy Sans",
              "fontStyle": "normal",
              "fontWeight": "100 900",
              "fontStretch": "normal",
              "fontDisplay": "swap",
              "src": ["file:./assets/fonts/inter-var-latin.woff2"]
            },
            {
              "fontFamily": "eMINDy Sans",
              "fontStyle": "normal",
              "fontWeight": "100 900",
              "fontStretch": "normal",
              "fontDisplay": "swap",
              "src": ["file:./assets/fonts/vazirmatn-var-arabic.woff2"]
            }
          ]
        },
        {
          "name": "Monospace",
          "slug": "mono",
          "fontFamily": "ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, \"Liberation Mono\", \"Courier New\", monospace"
        }
      ],
      "fontSizes": [
        { "name": "XS", "slug": "xs", "size": "0.875rem" },
        { "name": "S", "slug": "s", "size": "0.95rem" },
        { "name": "M", "slug": "m", "size": "1rem" },
        { "name": "L", "slug": "l", "size": "1.125rem" },
        { "name": "XL", "slug": "xl", "size": "clamp(1.25rem, 1.15rem + 0.35vw, 1.375rem)" },
        { "name": "2XL", "slug": "2xl", "size": "clamp(1.5rem, 1.25rem + 0.9vw, 1.875rem)" },
        { "name": "3XL", "slug": "3xl", "size": "clamp(1.875rem, 1.35rem + 1.8vw, 2.5rem)" },
        { "name": "4XL", "slug": "4xl", "size": "clamp(2.25rem, 1.45rem + 2.8vw, 3.25rem)" },
        { "name": "5XL", "slug": "5xl", "size": "clamp(2.75rem, 1.6rem + 3.8vw, 4.25rem)" }
      ]
    },
    "border": {
      "color": false,
      "radius": false,
      "style": false,
      "width": false,
      "radiusSizes": [
        { "name": "S", "slug": "s", "size": "0.375rem" },
        { "name": "M", "slug": "m", "size": "0.625rem" },
        { "name": "L", "slug": "l", "size": "0.875rem" },
        { "name": "XL", "slug": "xl", "size": "1.25rem" },
        { "name": "2XL", "slug": "2xl", "size": "1.75rem" }
      ]
    },
    "shadow": {
      "defaultPresets": false,
      "presets": [
        { "name": "Soft", "slug": "soft", "shadow": "0 10px 28px rgba(10, 42, 67, 0.10)" },
        {
          "name": "Card",
          "slug": "card",
          "shadow": "0 6px 18px rgba(10, 42, 67, 0.10), 0 1px 2px rgba(10, 42, 67, 0.06)"
        },
        {
          "name": "Glow",
          "slug": "glow",
          "shadow": "0 0 0 1px rgba(0, 163, 163, 0.25), 0 16px 40px rgba(0, 163, 163, 0.12)"
        }
      ]
    }
  },
  "styles": {
    "color": {
      "background": "var(--em-bg)",
      "text": "var(--em-text)"
    },
    "typography": {
      "fontFamily": "var:preset|font-family|emindy-sans",
      "fontSize": "var:preset|font-size|m",
      "lineHeight": "1.65"
    },
    "spacing": {
      "blockGap": "var:preset|spacing|l",
      "padding": {
        "top": "0px",
        "right": "var:preset|spacing|xl",
        "bottom": "0px",
        "left": "var:preset|spacing|xl"
      }
    },
    "elements": {
      "link": {
        "color": {
          "text": "var(--em-link)"
        },
        "typography": {
          "textDecoration": "underline"
        }
      },
      "button": {
        "border": {
          "radius": "var:preset|radius|xl"
        },
        "color": {
          "background": "var(--em-teal)",
          "text": "#FFFFFF"
        },
        "spacing": {
          "padding": {
            "top": "0.7em",
            "right": "1.1em",
            "bottom": "0.7em",
            "left": "1.1em"
          }
        },
        "typography": {
          "fontSize": "var:preset|font-size|m",
          "fontWeight": "600",
          "lineHeight": "1.2"
        }
      },
      "heading": {
        "color": {
          "text": "var(--em-text)"
        },
        "typography": {
          "fontFamily": "var:preset|font-family|emindy-sans",
          "fontWeight": "700",
          "lineHeight": "1.2",
          "letterSpacing": "-0.01em"
        }
      },
      "h1": { "typography": { "fontSize": "var:preset|font-size|4xl" } },
      "h2": { "typography": { "fontSize": "var:preset|font-size|3xl" } },
      "h3": { "typography": { "fontSize": "var:preset|font-size|2xl" } },
      "h4": { "typography": { "fontSize": "var:preset|font-size|xl" } },
      "h5": { "typography": { "fontSize": "var:preset|font-size|l" } },
      "h6": { "typography": { "fontSize": "var:preset|font-size|m" } }
    },
    "blocks": {
      "core/button": {
        "border": {
          "radius": "var:preset|radius|xl"
        }
      },
      "core/separator": {
        "color": {
          "text": "var:preset|color|emindy-border"
        }
      },
      "core/quote": {
        "border": {
          "left": {
            "color": "var(--em-border)",
            "style": "solid",
            "width": "4px"
          }
        },
        "spacing": {
          "padding": {
            "left": "var:preset|spacing|l"
          }
        }
      },
      "core/code": {
        "typography": {
          "fontFamily": "var:preset|font-family|mono",
          "fontSize": "var:preset|font-size|s"
        },
        "color": {
          "background": "var:preset|color|emindy-surface",
          "text": "var:preset|color|emindy-ink"
        },
        "border": {
          "radius": "var:preset|radius|m"
        },
        "spacing": {
          "padding": {
            "top": "var:preset|spacing|xs",
            "right": "var:preset|spacing|s",
            "bottom": "var:preset|spacing|xs",
            "left": "var:preset|spacing|s"
          }
        }
      },
      "core/table": {
        "border": {
          "color": "var(--em-border)",
          "style": "solid",
          "width": "1px"
        }
      }
    },
    "css": ":root{\n  --em-bg: var(--wp--preset--color--emindy-bg);\n  --em-text: var(--wp--preset--color--emindy-text);\n  --em-muted: var(--wp--preset--color--emindy-muted);\n  --em-border: rgba(10,42,67,0.14);\n  --em-card: rgba(10,42,67,0.03);\n  --em-teal: var(--wp--preset--color--emindy-teal);\n  --em-gold: var(--wp--preset--color--emindy-gold);\n  --em-link: var(--wp--preset--color--emindy-teal-700);\n  color-scheme: light;\n}\n:root[data-em-theme=\"dark\"]{\n  --em-bg: #061725;\n  --em-text: #E7F0F7;\n  --em-muted: #B6C7D6;\n  --em-border: rgba(231,240,247,0.14);\n  --em-card: rgba(231,240,247,0.06);\n  --em-teal: #66D9FF;\n  --em-gold: #F9E2A8;\n  --em-link: #66D9FF;\n  color-scheme: dark;\n}\n@media (prefers-color-scheme: dark){\n  :root:not([data-em-theme]){\n    --em-bg: #061725;\n    --em-text: #E7F0F7;\n    --em-muted: #B6C7D6;\n    --em-border: rgba(231,240,247,0.14);\n    --em-card: rgba(231,240,247,0.06);\n    --em-teal: #66D9FF;\n    --em-gold: #F9E2A8;\n    --em-link: #66D9FF;\n    color-scheme: dark;\n  }\n}\nbody{\n  background: var(--em-bg);\n  color: var(--em-text);\n  -webkit-font-smoothing: antialiased;\n  -moz-osx-font-smoothing: grayscale;\n}\n::selection{\n  background: rgba(0,163,163,0.22);\n}\n:where(a, button, input, textarea, select, summary, [role=\"button\"]):focus-visible{\n  outline: 2px solid var(--em-teal);\n  outline-offset: 3px;\n}\n:where(a){\n  text-decoration-thickness: 0.08em;\n  text-underline-offset: 0.18em;\n}\n:where(.wp-block-group.is-style-emindy-card, .em-card){\n  background: var(--em-card);\n  border: 1px solid var(--em-border);\n  border-radius: var(--wp--preset--radius--xl);\n  box-shadow: var(--wp--preset--shadow--card);\n}\n@media (prefers-reduced-motion: reduce){\n  *{\n    scroll-behavior: auto !important;\n    transition-duration: 0.01ms !important;\n    animation-duration: 0.01ms !important;\n    animation-iteration-count: 1 !important;\n  }\n}"
  },
  "customTemplates": [
    { "name": "archive-library", "title": "Library Hub", "postTypes": ["page"] },
    { "name": "page-assessments", "title": "Assessments Hub", "postTypes": ["page"] },
    { "name": "page-assessment-result", "title": "Assessment Result", "postTypes": ["page"] },
    { "name": "page-newsletter", "title": "Newsletter Landing", "postTypes": ["page"] },
    { "name": "page-no-title", "title": "Page Without Title", "postTypes": ["page"] },
    { "name": "posts-page", "title": "Posts Page", "postTypes": ["page"] }
  ],
  "templateParts": [
    { "name": "header", "title": "Header", "area": "header" },
    { "name": "footer", "title": "Footer", "area": "footer" }
  ]
}
