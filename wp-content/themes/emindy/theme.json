{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "settings": {
    "appearanceTools": true,
    "custom": {
      "brand": {
        "colors": {
          "deepBlue": "#0A2A43",
          "teal": "#00A3A3",
          "gold": "#F4D483",
          "white": "#FFFFFF",
          "sky": "#66D9FF",
          "softGreen": "#8ED1B2"
        },
        "radius": {
          "xl": "1.25rem",
          "2xl": "1.5rem"
        },
        "shadow": {
          "card": "var(--wp--preset--shadow--card)"
        }
      }
    },
    "color": {
      "background": true,
      "text": true,
      "link": true,
      "custom": true,
      "defaultPalette": false,
      "palette": [
        {
          "name": "Deep Blue",
          "slug": "deep-blue",
          "color": "#0A2A43"
        },
        {
          "name": "Teal",
          "slug": "teal",
          "color": "#00A3A3"
        },
        {
          "name": "Gold",
          "slug": "gold",
          "color": "#F4D483"
        },
        {
          "name": "White",
          "slug": "white",
          "color": "#FFFFFF"
        },
        {
          "name": "Sky",
          "slug": "sky",
          "color": "#66D9FF"
        },
        {
          "name": "Soft Green",
          "slug": "soft-green",
          "color": "#8ED1B2"
        }
      ]
    },
    "typography": {
      "customFontSize": true,
      "dropCap": false,
      "fluid": true,
      "lineHeight": true,
      "fontFamilies": [
        {
          "name": "System Sans",
          "slug": "system-sans",
          "fontFamily": "-apple-system, BlinkMacSystemFont, \"Segoe UI\", system-ui, sans-serif"
        }
      ],
      "fontSizes": [
        {
          "slug": "xs",
          "name": "XS",
          "size": "0.875rem"
        },
        {
          "slug": "sm",
          "name": "Small",
          "size": "1rem"
        },
        {
          "slug": "base",
          "name": "Base",
          "size": "1.125rem"
        },
        {
          "slug": "lg",
          "name": "Large",
          "size": "1.25rem"
        },
        {
          "slug": "xl",
          "name": "XL",
          "size": "1.5rem"
        },
        {
          "slug": "2xl",
          "name": "2XL",
          "size": "1.875rem"
        },
        {
          "slug": "3xl",
          "name": "3XL",
          "size": "2.25rem"
        },
        {
          "slug": "4xl",
          "name": "4XL",
          "size": "3rem"
        }
      ]
    },
    "shadow": {
      "defaultPresets": false,
      "presets": [
        {
          "name": "Card",
          "slug": "card",
          "shadow": "0 10px 30px rgba(0,0,0,.12)"
        },
        {
          "name": "Focus Outline",
          "slug": "focus",
          "shadow": "0 0 0 3px rgba(0,163,163,0.25)"
        }
      ]
    },
    "spacing": {
      "blockGap": true,
      "margin": true,
      "padding": true,
      "spacingScale": {
        "operator": "*",
        "increment": 1,
        "steps": 8,
        "mediumStep": 4,
        "unit": "rem"
      },
      "spacingSizes": [
        {
          "slug": "xs",
          "name": "XS",
          "size": "0.5rem"
        },
        {
          "slug": "sm",
          "name": "Small",
          "size": "0.75rem"
        },
        {
          "slug": "md",
          "name": "Medium",
          "size": "1rem"
        },
        {
          "slug": "lg",
          "name": "Large",
          "size": "1.5rem"
        },
        {
          "slug": "xl",
          "name": "XL",
          "size": "2rem"
        }
      ],
      "units": [
        "px",
        "em",
        "rem",
        "vh",
        "vw",
        "%"
      ]
    },
    "layout": {
      "contentSize": "720px",
      "wideSize": "1200px"
    },
    "border": {
      "color": true,
      "radius": true,
      "style": true,
      "width": true
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--white)",
      "text": "var(--wp--preset--color--deep-blue)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--system-sans)",
      "lineHeight": "1.6"
    },
    "elements": {
      "button": {
        "border": {
          "color": "transparent",
          "radius": "var(--wp--custom--brand--radius--xl)",
          "style": "solid",
          "width": "2px"
        },
        "color": {
          "background": "var(--wp--preset--color--deep-blue)",
          "text": "var(--wp--preset--color--white)"
        },
        "shadow": "var(--wp--preset--shadow--card)",
        "typography": {
          "fontWeight": "700"
        },
        ":hover": {
          "color": {
            "background": "var(--wp--preset--color--teal)",
            "text": "var(--wp--preset--color--white)"
          }
        },
        ":focus": {
          "border": {
            "color": "var(--wp--preset--color--teal)"
          },
          "shadow": "var(--wp--preset--shadow--focus)"
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--preset--color--deep-blue)"
        },
        "typography": {
          "textDecoration": "underline"
        },
        ":hover": {
          "color": {
            "text": "var(--wp--preset--color--teal)"
          }
        },
        ":focus": {
          "color": {
            "background": "rgba(0,163,163,0.1)",
            "text": "var(--wp--preset--color--deep-blue)"
          },
          "typography": {
            "textDecoration": "underline"
          }
        }
      }
    }
  }
}
